<?xml version='1.0' encoding='UTF-8'?>
<naif-pds4-bundler_configuration>

    <!-- =========================== -->
    <!-- PDS parameters              -->
    <!-- =========================== -->
    <pds_parameters>
        <pds_version>4</pds_version>
        <information_model>1.14.0.0</information_model>
        <xml_model>http://pds.nasa.gov/pds4/pds/v1/PDS4_PDS_1E00.sch</xml_model>
        <schema_location>http://pds.nasa.gov/pds4/pds/v1 http://pds.nasa.gov/pds4/pds/v1/PDS4_PDS_1E00.xsd
        </schema_location>
        <logical_identifier>urn:nasa:pds:uranus_occ_u137_hst_fos</logical_identifier>
    </pds_parameters>

    <!-- =========================== -->
    <!-- Bundle parameters           -->
    <!-- =========================== -->
    <bundle_parameters>
        <producer_name>Marc Costa Sitja</producer_name>
        <author_list>Costa Sitja M.; French R. G.; Gordon D.</author_list>
        <institution>Wellesley College</institution>
        <spice_name>HST</spice_name>
        <release_date>2021-08-20</release_date>
        <date_format>infomod2</date_format>
        <end_of_line>CRLF</end_of_line>
    </bundle_parameters>

    <!-- =========================== -->
    <!-- Mission Parameters          -->
    <!-- =========================== -->
    <mission_parameters>
        <mission_acronym>hst</mission_acronym>
        <mission_name>Hubble Space Telescope Mission</mission_name>
        <mission_start>2020-07-30T12:51:34Z</mission_start>
        <mission_finish>2050-01-01T00:00:00Z</mission_finish>
        <observer>Hubble Space Telescope</observer>
        <target>URANUS</target>
        <kernels_to_load>
            <lsk>naif[0-9][0-9][0-9][0-9].tls</lsk>
        </kernels_to_load>
    </mission_parameters>

    <!-- =========================== -->
    <!-- Directories                 -->
    <!-- =========================== -->
    <directories>
        <working_directory>working</working_directory>
        <kernels_directory>kernels</kernels_directory>
        <staging_directory>staging</staging_directory>
        <bundle_directory>hst</bundle_directory>
    </directories>

    <!-- =========================== -->
    <!-- Kernel List                 -->
    <!-- =========================== -->
    <kernel_list>
        <kernel pattern="pg3f0000r.bsp">
            <description>SPICE SPK file containing ephemeris data for the Hubble Space Telescope (HST) spacecraft to support Earth-based Uranus occultations, created by Richard G. French, Wellesley College, using STScI data.</description>
        </kernel>
        <kernel pattern="pg490000r.bsp">
            <description>SPICE SPK file containing ephemeris data for the Hubble Space Telescope (HST) spacecraft to support Earth-based Uranus occultations, created by Richard G. French, Wellesley College, using STScI data.</description>
        </kernel>
    </kernel_list>

</naif-pds4-bundler_configuration>
